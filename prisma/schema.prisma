// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
model Employee {
  id        Int      @default(autoincrement()) @id
  name     String
  email    String
  password String
  @@unique([email])
}
model Student {
  id        Int      @default(autoincrement()) @id
  name      String
  email     String
  password  String
  studentCode String
  @@unique([email, studentCode])
}
